---
import Layout from '~/layouts/Layout.astro';
import Hero from '~/sections/Hero.astro';
import About from '~/sections/About.astro';
import Features from '~/sections/Features.astro';
import HowItWorks from '~/sections/HowItWorks.astro';
import SupplierBenefits from '~/sections/SupplierBenefits.astro';
import Faq from '~/sections/Faq.astro';
---

<Layout 
  title="وفر لي - منصتك لتوفير كل احتياجاتك"
  description="منصة رائدة تربط المستهلكين وتجار التجزئة بموردي الأغذية المحليين. وفر الوقت والمال على مشترياتك الغذائية مع أسعار تنافسية والتوصيل مباشرة من المورد."
>
  <!-- Navigation Header -->
  <nav class="fixed top-0 w-full bg-white/95 backdrop-blur-md border-b border-gray-200 z-50" x-data="{ open: false }">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <img src="logo.svg" alt="وفر لي" class="h-10 w-auto" />
          </div>
          <div class="mr-3">
            <h1 class="text-xl font-bold text-gray-900">وفر لي</h1>
          </div>
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden md:block">
          <div class="mr-10 flex items-baseline space-x-reverse space-x-4">
            <a href="#home" class="text-gray-900 hover:text-[var(--color-primary)] px-3 py-2 rounded-md text-sm font-medium transition-colors">الرئيسية</a>
            <a href="#about" class="text-gray-600 hover:text-[var(--color-primary)] px-3 py-2 rounded-md text-sm font-medium transition-colors">من نحن</a>
            <a href="#features" class="text-gray-600 hover:text-[var(--color-primary)] px-3 py-2 rounded-md text-sm font-medium transition-colors">المميزات</a>
            <a href="#how-it-works" class="text-gray-600 hover:text-[var(--color-primary)] px-3 py-2 rounded-md text-sm font-medium transition-colors">كيف يعمل</a>
            <a href="#contact" class="text-gray-600 hover:text-[var(--color-primary)] px-3 py-2 rounded-md text-sm font-medium transition-colors">تواصل معنا</a>
          </div>
        </div>

        <!-- CTA Button -->
        <div class="hidden md:block">
          <button class="bg-[var(--color-primary)] text-white px-6 py-2 rounded-lg font-medium hover:bg-[var(--color-secondary)] transition-all duration-300">
            ابدأ الآن
          </button>
        </div>

        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button @click="open = !open" class="text-gray-600 hover:text-gray-900 focus:outline-none focus:text-gray-900">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path x-show="!open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              <path x-show="open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div x-show="open" x-transition class="md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
        <a href="#home" class="text-gray-900 block px-3 py-2 rounded-md text-base font-medium">الرئيسية</a>
        <a href="#about" class="text-gray-600 hover:text-[var(--color-primary)] block px-3 py-2 rounded-md text-base font-medium">من نحن</a>
        <a href="#features" class="text-gray-600 hover:text-[var(--color-primary)] block px-3 py-2 rounded-md text-base font-medium">المميزات</a>
        <a href="#how-it-works" class="text-gray-600 hover:text-[var(--color-primary)] block px-3 py-2 rounded-md text-base font-medium">كيف يعمل</a>
        <a href="#contact" class="text-gray-600 hover:text-[var(--color-primary)] block px-3 py-2 rounded-md text-base font-medium">تواصل معنا</a>
        <button class="w-full mt-4 bg-[var(--color-primary)] text-white px-6 py-2 rounded-lg font-medium hover:bg-[var(--color-secondary)] transition-colors">ابدأ الآن</button>
      </div>
    </div>
  </nav>

  <main>
    <!-- Hero Section -->
    <Hero />

    <!-- Stats Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-3 gap-8" x-data="{
           visible: false,
           stats: {
             suppliers: { current: 0, target: 0, suffix: '+' },
             satisfaction: { current: 0, target: 0, suffix: '%' }
           },
           initStats() {
             // Read values from data-num attributes
             this.stats.suppliers.target = parseInt(this.$refs.suppliersCount?.dataset?.num || 100);
             this.stats.satisfaction.target = parseInt(this.$refs.satisfactionCount?.dataset?.num || 98);
           },
           animateStats() {
             this.initStats();
             Object.keys(this.stats).forEach(key => {
               const stat = this.stats[key];
               const duration = 1500;
               const startTime = performance.now();
               const animate = (currentTime) => {
                 const elapsed = currentTime - startTime;
                 const progress = Math.min(elapsed / duration, 1);
                 const easeOutQuart = 1 - Math.pow(1 - progress, 4);
                 stat.current = Math.floor(stat.target * easeOutQuart);
                 if (progress < 1) {
                   requestAnimationFrame(animate);
                 } else {
                   stat.current = stat.target;
                 }
               };
               requestAnimationFrame(animate);
             });
           }
         }" x-intersect="visible = true; setTimeout(() => animateStats(), 400)">
          <div class="text-center" x-show="visible" x-transition:enter="transition ease-out duration-600 delay-200" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
            <div class="text-3xl md:text-4xl font-bold text-[var(--color-primary)] mb-2" x-text="stats.suppliers.current + stats.suppliers.suffix">
            100+
            </div>
            <p class="text-gray-700">مورد معتمد</p>
          </div>
          <div class="text-center" x-show="visible" x-transition:enter="transition ease-out duration-600 delay-400" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
            <div class="text-3xl md:text-4xl font-bold text-[var(--color-primary)] mb-2" x-text="stats.satisfaction.current + stats.satisfaction.suffix">
            98%
            </div>
            <p class="text-gray-700">رضا العملاء</p>
          </div>
          <div class="text-center col-span-2 md:col-span-1" x-show="visible" x-transition:enter="transition ease-out duration-600 delay-600" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
            <div class="text-3xl md:text-4xl font-bold text-[var(--color-primary)] mb-2">
            24/7
            </div>
            <p class="text-gray-700">دعم فني</p>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <About />

    <!-- Features Section -->
    <Features />
   
    <HowItWorks />

    <!-- Supplier Benefits Section -->
    <SupplierBenefits />

    <!-- FAQ Section -->
    <Faq />

    <!-- CTA Section -->
    <section id="cta" class="py-20 bg-primary">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div x-data="{ visible: false }" x-intersect="visible = true">
          <h2 class="text-3xl md:text-4xl font-bold !text-white mb-6" x-show="visible" x-transition:enter="transition ease-out duration-600" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
            ابدأ رحلتك مع وفر لي اليوم
          </h2>
          <p class="text-xl !text-white mb-8" x-show="visible" x-transition:enter="transition ease-out duration-600 delay-200" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
            انضم إلى آلاف المتاجر والمطاعم التي توفر المال والوقت مع منصة وفر لي
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center" x-show="visible" x-transition:enter="transition ease-out duration-600 delay-400" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
            <button 
              onclick="document.getElementById('contact').scrollIntoView({behavior: 'smooth'})"
              class="bg-white text-primary text-lg font-semibold px-8 py-3 rounded-full hover:shadow-xl hover:scale-105 transition-all duration-300 flex items-center justify-center gap-2 group">
              <span>سجل اهتمامك الآن</span>
              <i class="ri-arrow-left-line transition-transform group-hover:-translate-x-1"></i>
            </button>
            <button 
              onclick="document.getElementById('contact').scrollIntoView({behavior: 'smooth'})"
              class="border-2 border-white text-white text-lg font-semibold px-8 py-3 rounded-full hover:bg-white hover:text-primary transition-all duration-300">
              تحدث مع فريق المبيعات
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Contact Info -->
          <div x-data="{ visible: false }" x-intersect="visible = true">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6" x-show="visible" x-transition:enter="transition ease-out duration-600" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
              تواصل معنا
            </h2>
            <p class="text-lg text-gray-700 mb-8" x-show="visible" x-transition:enter="transition ease-out duration-600 delay-200" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
              نحن هنا لمساعدتك. تواصل معنا عبر أي من الطرق التالية
            </p>
            
            <div class="space-y-6" x-show="visible" x-transition:enter="transition ease-out duration-600 delay-400" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-[var(--color-primary)] rounded-lg flex items-center justify-center">
                  <i class="ri-phone-line text-white text-xl"></i>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900">الهاتف</h3>
                  <p class="text-gray-700" dir="ltr">+966 50 123 4567</p>
                </div>
              </div>
              
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-[var(--color-primary)] rounded-lg flex items-center justify-center">
                  <i class="ri-mail-line text-white text-xl"></i>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900">البريد الإلكتروني</h3>
                  <p class="text-gray-700">info@wfr.li</p>
                </div>
              </div>
              
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-[var(--color-primary)] rounded-lg flex items-center justify-center">
                  <i class="ri-map-pin-line text-white text-xl"></i>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900">العنوان</h3>
                  <p class="text-gray-700">مكة المكرمة، المملكة العربية السعودية</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="bg-white rounded-2xl p-8 shadow-lg" x-data="{ visible: false, formData: { name: '', email: '', message: '' } }" x-intersect="visible = true">
            <h3 class="text-2xl font-bold text-gray-900 mb-6" x-show="visible" x-transition:enter="transition ease-out duration-600" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
              أرسل لنا رسالة
            </h3>
            
            <form class="space-y-6" x-show="visible" x-transition:enter="transition ease-out duration-600 delay-200" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">الاسم</label>
                <input type="text" x-model="formData.name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent transition-colors" placeholder="أدخل اسمك">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">البريد الإلكتروني</label>
                <input type="email" x-model="formData.email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent transition-colors" placeholder="أدخل بريدك الإلكتروني">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">الرسالة</label>
                <textarea x-model="formData.message" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent transition-colors" placeholder="اكتب رسالتك هنا"></textarea>
              </div>
              
              <button type="submit" class="w-full bg-[var(--color-primary)] text-white px-6 py-3 rounded-lg font-medium hover:bg-[var(--color-secondary)] hover:shadow-lg transition-all duration-300">
                إرسال الرسالة
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-4 gap-8">
        <!-- Company Info -->
        <div class="md:col-span-2">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-[var(--color-primary)] rounded-lg flex items-center justify-center ml-3">
              <span class="text-white font-bold text-lg">وفر</span>
            </div>
            <h3 class="text-xl font-bold text-white">وفر لي</h3>
          </div>
          <p class="!text-white mb-4 max-w-md">
            منصة رائدة تربط أصحاب المتاجر والمطاعم بموردي الأغذية المحليين بطريقة سهلة وفعالة.
          </p>
          <div class="flex gap-4">
            <a href="#" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-[var(--color-primary)] transition-colors">
              <i class="ri-twitter-line text-white"></i>
            </a>
            <a href="#" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-[var(--color-primary)] transition-colors">
              <i class="ri-linkedin-line text-white"></i>
            </a>
            <a href="#" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-[var(--color-primary)] transition-colors">
              <i class="ri-instagram-line text-white"></i>
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div>
          <h4 class="font-bold mb-4 text-white">روابط سريعة</h4>
          <ul class="space-y-2">
            <li><a href="#home" class="text-gray-400 hover:text-white transition-colors">الرئيسية</a></li>
            <li><a href="#about" class="text-gray-400 hover:text-white transition-colors">من نحن</a></li>
            <li><a href="#features" class="text-gray-400 hover:text-white transition-colors">المميزات</a></li>
            <li><a href="#contact" class="text-gray-400 hover:text-white transition-colors">تواصل معنا</a></li>
          </ul>
        </div>

        <!-- Contact Info -->
        <div>
          <h4 class="font-bold mb-4 text-white">معلومات التواصل</h4>
          <ul class="space-y-2">
            <li class="text-gray-400" dir="ltr">+966 50 123 4567</li>
            <li class="text-gray-400">info@wfr.li</li>
            <li class="text-gray-400">مكة المكرمة، السعودية</li>
          </ul>
        </div>
      </div>

      <div class="border-t border-gray-800 mt-8 pt-8 text-center">
        <p class="text-gray-400">
          © 2025 وفر لي. جميع الحقوق محفوظة.
        </p>
      </div>
    </div>
  </footer>

  <!-- Custom Styles -->
  <style>
    :root {
      --color-primary: oklch(0.596 0.101 199);    /* #009196 */
      --color-secondary: oklch(0.786 0.164 71.7);  /* #F9A51A */
      --color-text: oklch(0.596 0 none);     /* #7F7F7F */
    }

    /* Smooth scrolling */
    html {
      scroll-behavior: smooth;
    }

    /* Custom animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in-up {
      animation: fadeInUp 0.6s ease-out;
    }

    /* Alpine.js cloak */
    [x-cloak] {
      display: none !important;
    }

    /* Ensure text visibility */
    body {
      color: #374151; /* gray-700 */
    }

    h1, h2, h3, h4, h5, h6 {
      color: #111827; /* gray-900 */
    }

    p {
      color: #374151; /* gray-700 */
    }
  </style>
</Layout>