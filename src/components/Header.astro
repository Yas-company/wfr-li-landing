---
// src/components/Header.astro
---
<header class="bg-white/95 backdrop-blur-md shadow-lg sticky top-0 z-50 border-b border-gray-100">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <div class="flex items-center gap-3 cursor-pointer">
      <img src="logo.svg" alt="وفر لي" class="h-8 w-auto" />
      <span class="text-2xl text-primary font-bold">وفر لي</span>
    </div>
    
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex gap-8">
      <a href="#home" class="text-gray-800">
        الرئيسية
      </a>
      <a href="#about" class="text-gray-800">
        من نحن
      </a>
      <a href="#features" class="text-gray-800">
        المميزات
      </a>

      <a href="#how-it-works" class="text-gray-800">
        كيف يعمل
      </a>
      <a href="#contact" class="text-gray-800">
        اتصل بنا
      </a>
    </nav>
    
    <!-- Mobile Navigation -->
    <!-- Mobile menu button -->
    <details class="md:hidden relative">
      <summary class="w-10 h-10 flex items-center justify-center rounded-lg cursor-pointer list-none" aria-label="فتح قائمة التنقل">
        <i class="ri-menu-line text-xl"></i>
      </summary>
      
      <div class="absolute top-full right-0 mt-2 w-64 bg-white shadow-lg border border-gray-100 rounded-lg z-50">
        <nav class="px-4 py-4 space-y-2">
          <a href="#home" class="block py-3 px-4 text-gray-800 rounded-lg hover:bg-gray-50">
            الرئيسية
          </a>
          <a href="#about" class="block py-3 px-4 text-gray-800 rounded-lg hover:bg-gray-50">
            من نحن
          </a>
          <a href="#features" class="block py-3 px-4 text-gray-800 rounded-lg hover:bg-gray-50">
            المميزات
          </a>
          <a href="#how-it-works" class="block py-3 px-4 text-gray-800 rounded-lg hover:bg-gray-50">
            كيف يعمل
          </a>
          <a href="#contact" class="block py-3 px-4 text-gray-800 rounded-lg hover:bg-gray-50">
            اتصل بنا
          </a>
        </nav>
      </div>
    </details>
  </div>
  
  <!-- Progress bar -->
  <div class="h-1 bg-gradient-to-r from-primary to-secondary" id="progress-bar"></div>
</header>