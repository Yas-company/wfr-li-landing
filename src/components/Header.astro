---
// src/components/Header.astro
---
<header class="bg-white/95 backdrop-blur-md shadow-lg sticky top-0 z-50 border-b border-gray-100" x-data="{ mobileMenuOpen: false }" x-cloak>
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <div class="flex items-center gap-3 hover:scale-105 transition-transform duration-200 cursor-pointer">
      <img src="/wfr-li-landing/logo.svg" alt="وفر لي" class="h-8 w-auto" />
      <span class="text-2xl text-primary font-bold">وفر لي</span>
    </div>
    
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex gap-8">
      <a href="#home" class="text-gray-800 hover:text-primary transition-all duration-200 relative group">
        الرئيسية
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all duration-200 group-hover:w-full"></span>
      </a>
      <a href="#about" class="text-gray-800 hover:text-primary transition-all duration-200 relative group">
        من نحن
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all duration-200 group-hover:w-full"></span>
      </a>
      <a href="#features" class="text-gray-800 hover:text-primary transition-all duration-200 relative group">
        المميزات
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all duration-200 group-hover:w-full"></span>
      </a>

      <a href="#how-it-works" class="text-gray-800 hover:text-primary transition-all duration-200 relative group">
        كيف يعمل
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all duration-200 group-hover:w-full"></span>
      </a>
      <a href="#contact" class="text-gray-800 hover:text-primary transition-all duration-200 relative group">
        اتصل بنا
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all duration-200 group-hover:w-full"></span>
      </a>
    </nav>
    
    <!-- Mobile Menu Button -->
    <div class="flex items-center gap-4">
      <button 
        class="md:hidden w-10 h-10 flex items-center justify-center hover:bg-gray-100 rounded-lg transition-colors duration-200" 
        @click="mobileMenuOpen = !mobileMenuOpen"
        :aria-expanded="mobileMenuOpen"
        aria-label="فتح قائمة التنقل"
      >
        <i :class="mobileMenuOpen ? 'ri-close-line' : 'ri-menu-line'" class="text-xl transition-transform duration-200"></i>
      </button>
    </div>
  </div>
  
  <!-- Mobile Navigation Menu -->
  <div 
    x-show="mobileMenuOpen" 
    x-cloak
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 -translate-y-2"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 -translate-y-2"
    class="md:hidden bg-white border-t border-gray-100"
    @click.away="mobileMenuOpen = false"
  >
    <nav class="container mx-auto px-4 py-4 space-y-2">
      <a 
        href="#home" 
        class="block py-3 px-4 text-gray-800 hover:text-primary hover:bg-gray-50 rounded-lg transition-all duration-200"
        @click="mobileMenuOpen = false"
      >
        الرئيسية
      </a>
      <a 
        href="#about" 
        class="block py-3 px-4 text-gray-800 hover:text-primary hover:bg-gray-50 rounded-lg transition-all duration-200"
        @click="mobileMenuOpen = false"
      >
        من نحن
      </a>
      <a 
        href="#features" 
        class="block py-3 px-4 text-gray-800 hover:text-primary hover:bg-gray-50 rounded-lg transition-all duration-200"
        @click="mobileMenuOpen = false"
      >
        المميزات
      </a>

      <a 
        href="#how-it-works" 
        class="block py-3 px-4 text-gray-800 hover:text-primary hover:bg-gray-50 rounded-lg transition-all duration-200"
        @click="mobileMenuOpen = false"
      >
        كيف يعمل
      </a>
      <a 
        href="#contact" 
        class="block py-3 px-4 text-gray-800 hover:text-primary hover:bg-gray-50 rounded-lg transition-all duration-200"
        @click="mobileMenuOpen = false"
      >
        اتصل بنا
      </a>
    </nav>
  </div>
  
  <!-- Progress bar -->
  <div class="h-1 bg-gradient-to-r from-primary to-secondary" id="progress-bar"></div>
</header>