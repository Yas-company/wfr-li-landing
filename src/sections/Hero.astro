---
// src/sections/Hero.astro
// Devices.css loaded via Layout.astro
---
<section id="home" class="relative min-h-screen flex items-center overflow-hidden bg-white" x-data="{
  isVisible: false,
  stats: {
    stores: { current: 0, target: parseInt($refs.storesCount?.dataset?.num || 0), suffix: '+' },
    suppliers: { current: 0, target: parseInt($refs.suppliersCount?.dataset?.num || 0), suffix: '+' },
    orders: { current: 0, target: parseInt($refs.ordersCount?.dataset?.num || 0), suffix: '+' }
  },
  animateStats() {
    Object.keys(this.stats).forEach(key => {
      const stat = this.stats[key];
      const increment = stat.target / 50;
      const timer = setInterval(() => {
        if (stat.current < stat.target) {
          stat.current = Math.min(stat.current + increment, stat.target);
        } else {
          clearInterval(timer);
        }
      }, 30);
    });
  }
}" x-init="
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        isVisible = true;
        setTimeout(() => animateStats(), 500);
      }
    });
  });
  observer.observe($el);
">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, oklch(var(--color-primary)) 1px, transparent 0); background-size: 20px 20px;"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-right" x-show="isVisible" x-transition:enter="transition ease-out duration-1000" x-transition:enter-start="opacity-0 translate-y-8" x-transition:enter-end="opacity-1 translate-y-0">
        <!-- Achievement Badges -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-3 mb-8">
          <div class="bg-white border border-gray-200 rounded-full px-4 py-2 shadow-sm">
            <div class="flex items-center gap-2">
              <i class="ri-shield-check-line text-sm" style="color: oklch(var(--color-primary));"></i>
              <span class="text-sm font-medium text-gray-700">منصة موثوقة</span>
            </div>
          </div>
          <div class="bg-white border border-gray-200 rounded-full px-4 py-2 shadow-sm">
            <div class="flex items-center gap-2">
              <i class="ri-customer-service-2-line text-sm" style="color: oklch(var(--color-secondary));"></i>
              <span class="text-sm font-medium text-gray-700">دعم 24/7</span>
            </div>
          </div>
        </div>
        
        <!-- Main Heading -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          <span class="block mb-2">كل احتياجاتك في مكان واحد</span>
          <span class="block" style="color: oklch(var(--color-primary));">بأسعار الجملة</span>
        </h1>
        
        <!-- Description -->
        <p class="text-lg md:text-xl text-gray-600 mb-8 leading-relaxed max-w-2xl mx-auto lg:mx-0">
          منصة رائدة تربط المستهلكين وتجار التجزئة بموردي الأغذية المحليين، مما يوفر السهولة والفعالية وأفضل الأسعار للجميع.
        </p>
        
        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 mb-8">
          <div class="text-center">
            <div x-ref="storesCount" data-num="0" class="text-2xl md:text-3xl font-bold text-gray-900" x-text="Math.floor(stats.stores.current) + stats.stores.suffix">0+</div>
            <div class="text-sm text-gray-600">عميل راضٍ</div>
          </div>
          <div class="text-center">
            <div x-ref="suppliersCount" data-num="0" class="text-2xl md:text-3xl font-bold text-gray-900" x-text="Math.floor(stats.suppliers.current) + stats.suppliers.suffix">0+</div>
            <div class="text-sm text-gray-600">مورد معتمد</div>
          </div>
          <div class="text-center">
            <div x-ref="ordersCount" data-num="0" class="text-2xl md:text-3xl font-bold text-gray-900" x-text="Math.floor(stats.orders.current) + stats.orders.suffix">0+</div>
            <div class="text-sm text-gray-600">طلب مكتمل</div>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <button
            onclick="document.getElementById('interest-form').scrollIntoView({behavior: 'smooth'})"
            class="px-8 py-4 rounded-xl font-semibold text-white transition-all duration-300 hover:scale-105 hover:shadow-lg flex items-center justify-center gap-3 group"
            style="background-color: oklch(var(--color-primary));"
          >
            <span>سجل اهتمامك الآن</span>
            <i class="ri-arrow-left-line group-hover:-translate-x-1 transition-transform"></i>
          </button>
          <button
            onclick="document.getElementById('about').scrollIntoView({behavior: 'smooth'})"
            class="px-8 py-4 rounded-xl font-semibold text-gray-700 bg-white border-2 transition-all duration-300 hover:scale-105 hover:shadow-lg flex items-center justify-center gap-3 group"
            style="border-color: oklch(var(--color-primary));"
          >
            <span>تعرف علينا</span>
            <i class="ri-play-line group-hover:scale-110 transition-transform"></i>
          </button>
        </div>
      </div>
      
      <!-- Hero Image -->
      <div class="relative flex justify-center lg:justify-end" x-show="isVisible" x-transition:enter="transition ease-out duration-1000 delay-300" x-transition:enter-start="opacity-0 translate-x-8" x-transition:enter-end="opacity-1 translate-x-0">
        <div class="device device-iphone-x scale-75 lg:scale-50">
          <div class="device-frame">
            <img class="device-screen" src="image.png" alt="WFR-LI App Screenshot">
          </div>
          <div class="device-stripe"></div>
          <div class="device-header"></div>
          <div class="device-sensors"></div>
          <div class="device-btns"></div>
          <div class="device-power"></div>
        </div>
      </div>
    </div>
  </div>
</section>