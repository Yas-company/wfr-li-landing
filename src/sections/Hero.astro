---
// src/sections/Hero.astro
// Devices.css loaded via Layout.astro
---

<style>
/* iPhone X Container Styling */
.iphone-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  
  /* Mobile: Small scale */
  transform: scale(0.6);
}

/* Responsive scaling for iPhone X */
@media (min-width: 480px) {
  .iphone-container {
    transform: scale(0.7);
  }
}

@media (min-width: 640px) {
  .iphone-container {
    transform: scale(0.8);
  }
}

@media (min-width: 768px) {
  .iphone-container {
    transform: scale(0.85);
  }
}

@media (min-width: 1024px) {
  .iphone-container {
    transform: scale(0.9);
  }
}

@media (min-width: 1280px) {
  .iphone-container {
    transform: scale(1.0);
  }
}

@media (min-width: 1536px) {
  .iphone-container {
    transform: scale(1.1);
  }
}

/* Device screen styling */
.device-screen {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: inherit;
}

/* Hover effect for device */
.device:hover {
  transform: translateY(-5px);
  transition: transform 0.3s ease;
}
</style>

<section id="home" class="relative min-h-screen bg-gray-50 overflow-hidden" x-data="{
  isVisible: false,
  stats: {
    stores: { current: 0, target: 0, suffix: '+' },
    suppliers: { current: 0, target: 0, suffix: '+' },
    orders: { current: 0, target: 0, suffix: '+' }
  },
  
  initStats() {
    // Read values from data-num attributes and update targets
    const elements = this.$el.querySelectorAll('[data-num]');
    elements.forEach(el => {
      const key = el.dataset.key;
      const num = parseInt(el.dataset.num);
      const suffix = el.dataset.suffix || '';
      if (key && this.stats[key]) {
        this.stats[key].target = num;
        this.stats[key].suffix = suffix;
      }
    });
  },
  
  animateCounter(statKey) {
    const stat = this.stats[statKey];
    const duration = 2000;
    const startTime = performance.now();
    
    const animate = (currentTime) => {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      
      // Easing function for smooth animation
      const easeOutCubic = 1 - Math.pow(1 - progress, 3);
      stat.current = Math.floor(stat.target * easeOutCubic);
      
      if (progress < 1) {
        requestAnimationFrame(animate);
      } else {
        stat.current = stat.target;
      }
    };
    
    requestAnimationFrame(animate);
  },
  
  animateStats() {
    this.initStats();
    // Stagger animations for better visual effect
    Object.keys(this.stats).forEach((key, index) => {
      setTimeout(() => this.animateCounter(key), index * 150);
    });
  }
}" x-init="
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        isVisible = true;
        setTimeout(() => animateStats(), 500);
      }
    });
  });
  observer.observe($el);
">
  <!-- Background Elements -->
  <div class="absolute top-10 left-5 sm:top-20 sm:left-10 w-16 h-16 sm:w-20 sm:h-20 bg-primary/10 rounded-full blur-xl"></div>
  <div class="absolute bottom-10 right-5 sm:bottom-20 sm:right-10 w-24 h-24 sm:w-32 sm:h-32 bg-secondary/10 rounded-full blur-xl"></div>
  
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, oklch(var(--color-primary)) 1px, transparent 0); background-size: 20px 20px;"></div>
  </div>
  
  <!-- Main Content -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center min-h-screen">
      
      <!-- Text Content (First) -->
      <div class="text-center lg:text-right py-8 lg:py-16">
        <!-- Trust Badges -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-3 mb-8">
          <div class="bg-white border border-gray-200 rounded-full px-4 py-2 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-2">
              <i class="ri-shield-check-line text-sm" style="color: oklch(var(--color-primary));"></i>
              <span class="text-sm font-medium text-gray-700">منصة موثوقة</span>
            </div>
          </div>
          <div class="bg-white border border-gray-200 rounded-full px-4 py-2 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-2">
              <i class="ri-customer-service-2-line text-sm" style="color: oklch(var(--color-secondary));"></i>
              <span class="text-sm font-medium text-gray-700">دعم 24/7</span>
            </div>
          </div>
        </div>
        
        <!-- Logo -->
        <div class="mb-8">
          <img src="/logo.svg" alt="WFR-LI Logo" class="mx-auto lg:mx-0 h-20 sm:h-24">
        </div>
        
        <!-- Main Heading -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          <span class="block mb-2">كل احتياجاتك في مكان واحد</span>
          <span class="block" style="color: oklch(var(--color-primary));">بأسعار الجملة</span>
        </h1>
        
        <!-- Description -->
        <p class="text-lg lg:text-xl text-gray-600 mb-8 leading-relaxed max-w-2xl mx-auto lg:mx-0">
          منصة رائدة تربط المستهلكين وتجار التجزئة بالموردين المحليين، مما يوفر السهولة والفعالية وأفضل الأسعار للجميع.
        </p>
        
        <!-- CTA Button -->
        <div class="mb-12">
          <a href="/#contact" 
            class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-lg font-semibold hover:shadow-lg hover:underline underline-offset-4 transition-all duration-300 text-lg group"
          >
            ابدأ الآن
            <i class="ri-arrow-left-line group-hover:translate-x-1 transition-transform"></i>
          </a>
        </div>
        
        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 max-w-md mx-auto lg:mx-0">
          <div class="text-center">
            <div class="text-2xl lg:text-3xl font-bold text-gray-900" 
                 data-num="0" 
                 data-suffix="+" 
                 data-key="stores"
                 x-text="Math.floor(stats.stores.current) + stats.stores.suffix">0+</div>
            <div class="text-sm text-gray-600 mt-1">عميل راضٍ</div>
          </div>
          <div class="text-center">
            <div class="text-2xl lg:text-3xl font-bold text-gray-900" 
                 data-num="0" 
                 data-suffix="+" 
                 data-key="suppliers"
                 x-text="Math.floor(stats.suppliers.current) + stats.suppliers.suffix">0+</div>
            <div class="text-sm text-gray-600 mt-1">مورد معتمد</div>
          </div>
          <div class="text-center">
            <div class="text-2xl lg:text-3xl font-bold text-gray-900" 
                 data-num="0" 
                 data-suffix="+" 
                 data-key="orders"
                 x-text="Math.floor(stats.orders.current) + stats.orders.suffix">0+</div>
            <div class="text-sm text-gray-600 mt-1">طلب مكتمل</div>
          </div>
        </div>
      </div>
      
      <!-- iPhone X Device (Second) -->
      <div class="flex items-center justify-center py-8 lg:py-16">
        <div class="iphone-container">
          <div class="device device-iphone-x device-spacegray">
            <div class="device-stripe"></div>
            <div class="device-btns"></div>
            <div class="device-frame">
              <img class="device-screen" src="/image.png" alt="WFR-LI App Screenshot" loading="lazy">
            </div>
            <div class="device-header"></div>
            <div class="device-sensors"></div>
            <div class="device-power"></div>
            <div class="device-home"></div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>