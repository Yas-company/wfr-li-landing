---
// import { ViewTransition } from "astro:transitions";
import '~/styles/tailwind.css';

type Props = {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---
<!DOCTYPE html>
<html lang="ar" dir="rtl">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<!-- Multilingual Meta Tags -->
		<title>{title}</title>

		<!-- SEO Meta Tags -->
		<meta name="description" content={description} />
		<meta name="keywords" content="وفر لي, مشتريات غذائية, موردي أغذية, مطاعم, متاجر, توصيل طعام, السعودية, مكة المكرمة" />
		<meta name="author" content="وفر لي" />
		<meta name="robots" content="index, follow" />

		<!-- Hreflang Tags for SEO -->
		<link rel="alternate" hreflang="ar" href="https://WfrLi.com" />
		<link rel="alternate" hreflang="x-default" href="https://WfrLi.com" />

		<!-- Open Graph Meta Tags for WhatsApp and Social Media Sharing -->
		<meta property="og:title" content="وفر لي - منصة العروض والتوفير" />
		<meta property="og:description" content="منصة وفر لي تساعدك على اكتشاف أفضل العروض والتخفيضات والتوفير في مشترياتك." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://yas-company.github.io/wfr-li-landing/" />
		<meta property="og:image" content="https://dummyimage.com/1200x630/009688/ffffff&text=WFR+LI" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:type" content="image/png" />
		<meta property="og:locale" content="ar_SA" />
		<meta property="og:site_name" content="وفر لي" />

		<!-- WhatsApp Specific Meta Tags -->
		<meta property="og:image:alt" content="وفر لي - منصة العروض والتوفير" />
		<meta name="theme-color" content="#009688" />
		<meta name="color-scheme" content="light" />

		<!-- Twitter Card Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="وفر لي - منصة العروض والتوفير" />
		<meta name="twitter:description" content="منصة وفر لي تساعدك على اكتشاف أفضل العروض والتخفيضات والتوفير في مشترياتك." />
		<meta name="twitter:image" content="https://dummyimage.com/1200x630/009688/ffffff&text=WFR+LI" />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon.svg" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon.svg" />

		<!-- Canonical URL -->
		<link rel="canonical" href="https://WfrLi.com" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Tajawal:wght@200;300;400;500;700;800;900&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css" />
		<style>
			[x-cloak] { display: none !important; }
		</style>
         <!-- <ViewTransitions /> -->
	</head>
	<body class="bg-white font-sans">
		<slot />
		<script is:inline src="script.js"></script>
		<script is:inline src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
		<script is:inline src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
		<script is:inline defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
	</body>
</html> 